<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HistoryActivity">

    <android.support.v7.widget.RecyclerView
            android:layout_width="@dimen/match_constraint"
            android:layout_height="@dimen/match_constraint"
            android:id="@+id/history_recycler_view" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/default_margin_top" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="@dimen/default_margin_bottom"
            android:layout_marginBottom="@dimen/default_side_margin" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/default_side_margin" app:layout_constraintTop_toBottomOf="@+id/history_toolbar"
            tools:listitem="@layout/history_item"/>
    <android.support.v7.widget.Toolbar
            android:layout_width="@dimen/match_constraint"
            android:layout_height="@dimen/default_tool_bar_height"
            android:background="@color/colorPrimaryDark"
            android:theme="@style/ToolBarStyle"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/history_toolbar" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:title="@string/history_toolbar_title" app:layout_constraintHorizontal_bias="0.0"/>
</android.support.constraint.ConstraintLayout>